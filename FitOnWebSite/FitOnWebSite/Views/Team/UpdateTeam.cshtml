
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EntityLayer.Concretes.Team

@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Eğitmen Güncelle</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(t => t.ID)
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">İsim</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Başlığı giriniz" asp-for="Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Ünvan</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Ünvan giriniz" asp-for="Title">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Görsel Yolu</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Url giriniz" asp-for="ImageUrl">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Facebook</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Url giriniz" asp-for="FacebookUrl">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Instagram</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Url giriniz" asp-for="InstagramUrl">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">YouTube</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Url giriniz" asp-for="YoutubeUrl">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">X</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Url giriniz" asp-for="XUrl">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Email</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Url giriniz" asp-for="Email">
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary mr-2">Kaydet</button>
                <a class="btn btn-outline-secondary mr-2" href="/Team/Index/">İptal</a>
            </form>
        </div>
    </div>
</div>





