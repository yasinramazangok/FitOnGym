@using EntityLayer.Concretes
@model List<Team>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekip Bilgileri</h4>
            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>İsim</th>
                            <th>Ünvan</th>
                            <th>Görsel Yolu</th>
                            <th>Facebook</th>
                            <th>Instagram</th>
                            <th>YouTube</th>
                            <th>X</th>
                            <th>Email</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Title</td>
                                <td>@item.ImageUrl</td>
                                <td>@item.FacebookUrl</td>
                                <td>@item.InstagramUrl</td>
                                <td>@item.YoutubeUrl</td>
                                <td>@item.XUrl</td>
                                <td>@item.Email</td>
                                <td><a href="/Team/DeleteTeam/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Team/UpdateTeam/@item.ID" class="btn btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <a href="/Team/AddTeam" class="btn btn-outline-success">Yeni Eğitmen Ekle</a>
        </div>
    </div>
</div>




