@using EntityLayer.Concretes
@model List<Address>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Bilgileri</h4>
            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ülke</th>
                            <th>Şehir</th>
                            <th>İlçe</th>
                            <th>Mahalle</th>
                            <th>Cadde</th>
                            <th>Sokak</th>
                            <th>Bina Numarası</th>
                            <th>Bina Adı</th>
                            <th>Kat</th>
                            <th>Kapı Numarası</th>
                            <th>Posta Kodu</th>
                            <th>Telefon Numarası</th>
                            <th>Diğer Telefon</th>
                            <th>Email</th>
                            <th>Harita Bilgisi</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Country</td>
                                <td>@item.City</td>
                                <td>@item.District</td>
                                <td>@item.Neighbourhood </td>
                                <td>@item.Avenue</td>
                                <td>@item.Street</td>
                                <td>@item.BuildingNumber</td>
                                <td>@item.Apartment</td>
                                <td>@item.Floor</td>
                                <td>@item.DoorNumber</td>
                                <td>@item.PostalCode</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.PhoneNumber1</td>
                                <td>@item.Email</td>
                                <td>@item.MapInformation</td>
                                <td><a href="/Address/UpdateAddress/@item.ID" class="btn btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
