@using EntityLayer.Concretes
@model List<HomePage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ana Sayfa</h4>
            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Üst Bilgi </th>
                            <th>Üst Bilgi 1</th>
                            <th>Üst Bilgi 2</th>
                            <th>Üst Bilgi 3</th>
                            <th>Görsel Yolu</th>
                            <th>Görsel Yolu 1</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.TagLine</td>
                                <td>@item.TagLine1</td>
                                <td>@item.TagLine2</td>
                                <td>@item.TagLine3</td>
                                <td>@item.ImageUrl</td>
                                <td>@item.ImageUrl1</td>
                                <td><a href="/HomePage/DeleteHomePage/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/HomePage/UpdateHomePage/@item.ID" class="btn btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <a href="/HomePage/AddHomePage" class="btn btn-outline-success">Yeni Ekle</a>
        </div>
    </div>
</div>
