@using EntityLayer.Concretes
@model List<Admin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>İsim</th>
                            <th>Şifresi</th>
                            <th>Email</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Password</td>
                                <td>@item.Email</td>
                                <td><a href="/Admin/DeleteAdmin/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/UpdateAdmin/@item.ID" class="btn btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <a href="/Admin/AddAdmin" class="btn btn-outline-success">Yeni Admin Ekle</a>
        </div>
    </div>
</div>

