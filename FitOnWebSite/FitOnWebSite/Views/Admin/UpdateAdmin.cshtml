@model EntityLayer.Concretes.Admin

@{
    ViewData["Title"] = "UpdateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Güncelle</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(a => a.ID)
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">İsim</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Kullanıcı adını giriniz" asp-for="Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Şifre</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Şifreyi giriniz" asp-for="Password">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Email</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Email adresini giriniz" asp-for="Email">
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

