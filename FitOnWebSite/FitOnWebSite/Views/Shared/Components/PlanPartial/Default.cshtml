  @using EntityLayer.Concretes
  @model List<Plan>
 
 <!-- Pricing Section Begin -->
<section class="pricing-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>EĞİTİM PAKETLERİ</span>
                    <h2>SİZE UYGUN PLANI SEÇEBİLİRSİNİZ..</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-8">
                    <div class="ps-item">
                        <h3>@item.Limit</h3>
                        <div class="pi-price">
                            <h2>@item.Price</h2>
                            <span>@item.ClassCategory</span>
                        </div>
                        <ul>
                            <li>@item.Description</li>
                        </ul>
                        <a href="/Contact/Home/" class="primary-btn pricing-btn">BİZE ULAŞIN</a>
                    </div>
                </div>
            }        
        </div>
    </div>
</section>
<!-- Pricing Section End -->