@using EntityLayer.Concretes
@model List<Team>

<!-- Team Section Begin -->
<section class="team-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="team-title">
                    <div class="section-title">
                        <span>EKİBİMİZ</span>
                        <h2>UZMANLARDAN EĞİTİM ALIN..</h2>
                    </div>
                    <a href="/Contact/Home/" class="primary-btn btn-normal appoinment-btn">BİZE ULAŞIN</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="ts-slider owl-carousel">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4">
                        <div class="ts-item set-bg" data-setbg="@item.ImageUrl">
                            <div class="ts_text">
                                <h4>@item.Name</h4>
                                <span>@item.Title</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Team Section End -->