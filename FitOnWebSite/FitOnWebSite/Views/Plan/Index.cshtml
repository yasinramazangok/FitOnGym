@using EntityLayer.Concretes
@model List<Plan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Plan Ve Paketler</h4>
            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Limit</th>
                            <th>Fiyat</th>
                            <th>Sınıf Kategorisi</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Limit</td>
                                <td>@item.Price</td>
                                <td>@item.ClassCategory</td>
                                <td>@item.Description</td>
                                <td><a href="/Plan/DeletePlan/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Plan/UpdatePlan/@item.ID" class="btn btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <a href="/Plan/AddPlan" class="btn btn-outline-success">Yeni Paket Ekle</a>
        </div>
    </div>
</div>

